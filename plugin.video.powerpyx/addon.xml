<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.powerpyx"
	name="PowerPyx"
	version="1.0.0"
	provider-name="blueIbird">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
    <import addon="script.module.addon.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version=" 6.8.10"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary></summary>
    <description>
PowerPyx is offering you high-quality video guides and helpful strategies for the latest games, focusing on PlayStation Trophies, Xbox Achievements, Collectibles and Walkthroughs.
	</description>
    <platform>all</platform>
    <website>www.powerpyx.com</website>
    <disclaimer>This version is not compatible with Kodi 19 and above</disclaimer>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.png</fanart>
        <screenshot></screenshot>      
    </assets>
  </extension>
</addon>
